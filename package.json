{
  "name": "type-be",
  "version": "0.0.1-SNAPSHOT",
  "description": "Backend Node With TypeScript",
  "main": "dist/start.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "dev": "nodemon --config \"./nodemon.json\"/",
    "copy": "cp package.json dist/ && cp README.md dist/ && cp .nvmrc dist/ && cp -r public dist/ && cp .env dist/",
    "dist": "npm run lint && npm run clean && tsc && npm run copy",
    "start": "npm run dist && node dist/src/index.js"
  },
  "author": "INDEC-IT",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "knex": "^0.19.5",
    "kue": "^0.11.6",
    "lodash": "^4.17.15",
    "mongoose": "^5.6.13",
    "morgan": "^1.9.1",
    "require-dir": "^1.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.14",
    "@types/knex": "^0.16.1",
    "@types/kue": "^0.11.13",
    "@types/lodash": "^4.14.138",
    "@types/mongoose": "^5.5.17",
    "@types/morgan": "^1.7.37",
    "@types/require-dir": "^1.0.0",
    "@types/winston": "^2.4.4",
    "cookie-parser": "^1.4.4",
    "husky": "^3.0.5",
    "nodemon": "^1.19.2",
    "rimraf": "^3.0.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2"
  }
}
